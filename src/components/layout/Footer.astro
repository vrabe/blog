---
import SocialList from "@/components/SocialList.astro";
import { menuLinks } from "@/site.config";
---

<footer
  class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top font-semibold text-gray-600 dark:text-gray-400 sm:flex-row sm:justify-between sm:text-sm"
>
  <nav
    aria-label="More on this site"
    class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
  >
    {
      menuLinks.map((link) => (
        <a class="px-4 py-2 hover:text-global-text hover:underline sm:py-0" href={link.path}>
          {link.title}
        </a>
      ))
    }
  </nav>
  <nav aria-label="Find me on" class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500">
    <SocialList />
  </nav>
</footer>
