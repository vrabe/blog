---
import FormattedDate from "../FormattedDate.astro";

const {
  content: { data },
  readingTime,
} = Astro.props;

const dateTimeOptions = {
  month: "long",
};
---

{data.draft ? <span class="text-base text-red-500">(Draft)</span> : null}
<h1 class="title">
  {data.title}
</h1>
<div class="mt-3 flex flex-wrap items-center gap-x-3 gap-y-2 text-sm">
  <p class="font-semibold">
    <FormattedDate date={data.created} dateTimeOptions={dateTimeOptions} showTooltip /> /
    {` 閱讀時間 ${Math.ceil(readingTime)} 分鐘`}
  </p>
  {
    data.created.toISOString() !== data.updated.toISOString() && (
      <span class="rounded-lg bg-quote/10 px-1 text-quote">
        上次更新:
        <FormattedDate
          class="ms-1"
          date={data.updated}
          dateTimeOptions={dateTimeOptions}
          showTooltip
        />
      </span>
    )
  }
</div>
{
  !!data.tags?.length && (
    <div class="mt-2 text-sm">
      <svg
        aria-hidden="true"
        class="inline-block h-6 w-6"
        fill="none"
        focusable="false"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0 0h24v24H0z" fill="none" stroke="none" />
        <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
        <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
        <path d="M6 9h-.01" />
      </svg>
      {data.tags.map((tag, i) => (
        <>
          {/* The following should not be formatted! */}
          <a
            aria-label={`View more blogs with the tag ${tag}`}
            class="cactus-link inline-block before:content-['#']"
            data-pagefind-filter="tag"
            href={`/blog/tags/${tag}/`}
          >{tag}</a>{i < data.tags.length - 1 && ", "}
        </>
      ))}
    </div>
  )
}
